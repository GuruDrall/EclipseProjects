package TestCases;

import org.testng.Assert;
import org.testng.annotations.Listeners;
import org.testng.annotations.Test;

import PageObject.CartPage;
import PageObject.HomePage;
import PageObject.LoginPage;

@Listeners (Utilities.Listeners.class)
public class AllTestCases2 extends BaseClass {
	LoginPage lp;

	@Test 
	public void addProductToCart() throws InterruptedException {
		String productName = "Sauce Labs Bolt T-Shirt";
		launchBrowser();
		openURL();
		lp = new LoginPage();
		String username = "standard_user";
		String password = "secret_sauce";
		HomePage hp = lp.perform_login(username, password);
		Thread.sleep(1000);
		hp.selectProductByName(productName);
		Thread.sleep(1000);
		CartPage cp = hp.clickOnCartIcon();
		Thread.sleep(1000);
		cp.clickOnCheckout();
		Thread.sleep(1000);
		cp.enterDetails("James", "Bond", "007");
		Thread.sleep(1000);
		Assert.assertTrue(cp.confirmationMsgCheck());
		Thread.sleep(1000);
		driver.close();
	}

}
