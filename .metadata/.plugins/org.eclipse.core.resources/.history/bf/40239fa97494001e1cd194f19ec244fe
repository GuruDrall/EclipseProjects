package TestCases;

import org.testng.Assert;
import org.testng.annotations.Listeners;
import org.testng.annotations.Test;

import PageObject.CartPage;
import PageObject.HomePage;
import PageObject.LoginPage;

@Listeners (Utilities.Listeners.class)
public class AllTestCases extends BaseClass {
	LoginPage lp;

	@Test(dataProvider = "correct_creds_data", dataProviderClass = Utilities.DataProviders.class, priority = 1, enabled = false)
	public void loginCheckWithCorrectCreds(String username, String password) {
		launchBrowser();
		openURL();
		lp = new LoginPage();
		HomePage hp = lp.perform_login(username, password);
		boolean status;
		try {
			status = hp.cartIconDisplayed();
		} catch (Exception e) {
			System.out.println("Cart Icon not found");
			status = false;
		}
//		System.out.println(status);
		Assert.assertTrue(status);
		driver.close();
	}

	@Test (groups = "login")
	public void loginCheckWithCorrectCreds() {
		launchBrowser();
		openURL();
		lp = new LoginPage();
		String username = "standard_use";
		String password = "secret_sauce";
		HomePage hp = lp.perform_login(username, password);
		boolean status = true;
		try {
			status = hp.cartIconDisplayed();
		} catch (Exception e) {
			System.out.println("Cart Icon not found");
			status = false;
		}
		Assert.assertTrue(status);
//		driver.close();

	}
	
	@Test (groups = "login")
	public void loginCheckWithCorrectCreds2() {
		launchBrowser();
		openURL();
		lp = new LoginPage();
		String username = "visual_user";
		String password = "secret_sauce";
		HomePage hp = lp.perform_login(username, password);
		boolean status = true;
		try {
			status = hp.cartIconDisplayed();
		} catch (Exception e) {
			System.out.println("Cart Icon not found");
			status = false;
		}
		Assert.assertTrue(status);
		driver.close();

	}

	@Test (groups = "order")
	public void addProductToCart() throws InterruptedException {
		String productName = "Sauce Labs Bolt T-Shirt";
		launchBrowser();
		openURL();
		lp = new LoginPage();
		String username = "standard_user";
		String password = "secret_sauce";
		HomePage hp = lp.perform_login(username, password);
		Thread.sleep(1000);
		hp.selectProductByName(productName);
		Thread.sleep(1000);
		CartPage cp = hp.clickOnCartIcon();
		Thread.sleep(1000);
		cp.clickOnCheckout();
		Thread.sleep(1000);
		cp.enterDetails("James", "Bond", "007");
		Thread.sleep(1000);
		Assert.assertTrue(cp.confirmationMsgCheck());
		Thread.sleep(1000);
		driver.close();
	}

}
